@model Project.Models.Category
@{
    ViewBag.Title = "Thêm mới";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/Content/Clients/index.html" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/Category/Index" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/Category/Create" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới thể loại</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        @Html.LabelFor(t => t.Name)
                        @Html.TextBoxFor(t => t.Name, new { @class = "form-control txtCategoryName", placeholder = "Nhập tên danh mục"})
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                    <a class="btn btn-danger" href="/admin/categories" onclick="stepper.previous()">Quay lại</a>
                    <button type="button" class="btn btn-primary btnInsert">Tạo</button>
                </div>
            </div>
        </div>

        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- Modal -->
@section Ajax{
    <script>
        $('.btnInsert').click(()=>{
            const CategoryName = $('.txtCategoryName').val();
            $.ajax({
                type: 'Post',
                url: '/api/categories/Post',
                data: { 'Name': CategoryName },
                success: ()=>{
                    location.assign("/admin/Categories/index");
                },
                error: (err) => {cconsole.log(err)}
            });
        });
    </script>
}