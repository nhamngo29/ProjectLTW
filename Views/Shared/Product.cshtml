
<a href="/Products/Detail/@ViewBag.item.ProductId" class="product__new-item">
    <div class="card" style="max-width:100%;min-height:98%;max-height:98%">
        <div>
            <img class="card-img-top" src="~/assets/img/product/@ViewBag.item.ImgeMain" alt="@ViewBag.item.ProductId">
            <form action="" class="hover-icon hidden-sm hidden-xs">
                <input type="hidden">
                <a href="~/pay.html" class="btn-add-to-cart" title="Mua ngay">
                    <i class="fas fa-cart-plus"></i>
                </a>
                <a data-toggle="modal" data-target="#myModal-@ViewBag.item.ProductId" class="quickview" title="Xem nhanh" id="QuickViewProduct" onclick="modal('@ViewBag.item.ProductId','@ViewBag.item.Name',@ViewBag.item.Promotion,@ViewBag.item.Price)">
                    <i class="fas fa-search"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <h5 class="card-title custom__name-product">
                @ViewBag.item.Name
            </h5>
            <div class="product__price">
                @{
                    if (ViewBag.item.Promotion > 0)
                    {
                        double GiaMoi = ViewBag.item.Price * (1 - ViewBag.item.Promotion * 0.01);
                        <p class="card-text price-color product__price-old">@string.Format("{0:0,0 đ}", ViewBag.item.Price)</p>
                        <p class="card-text price-color product__price-new">@string.Format("{0:0,0 đ}", GiaMoi)</p>
                    }
                    else
                    {
                        <p class="card-text price-color product__price-new">@string.Format("{0:0,0 đ}", ViewBag.item.Price)</p>
                    }
                }
            </div>
            <div class="home-product-item__action">
                <span class="home-product-item__like home-product-item__like--liked">
                    <i class="home-product-item__like-icon-empty far fa-heart"></i>
                    <i class="home-product-item__like-icon-fill fas fa-heart"></i>
                </span>
                <div class="home-product-item__rating">
                    @{
                        for (int i = 0; i < 5; i++)
                        {
                            if (i < ViewBag.item.Evaluate)//Nhỏ hơn sao đánh giá
                            {
                                <i class="home-product-item__star--gold fas fa-star"></i>
                                continue;
                            }
                            <i class="fas fa-star"></i>
                        }
                    }
                </div>
                <span class="home-product-item__sold">@ViewBag.item.TotalSold đã bán</span>
            </div>
            @if (ViewBag.item.Promotion > 0)
            {
                <div class="sale-off">
                    <span class="sale-off-percent">@ViewBag.item.Promotion%</span>
                    <span class="sale-off-label">GIẢM</span>
                </div>
            }
        </div>
    </div>
</a>
<!-- end modal -->
<!-- The Modal -->
<div class="modal" id="myModal-@ViewBag.item.ProductId">
    <div class="modal-dialog modal-lg">
        <div class="modal-content ">
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="mb-2 main-img-2">
                            <img src="~/assets/img/product/@ViewBag.item.ImgeMain" alt="" id="img-main" xoriginal="./assets/img/product/ars1.jpg">
                        </div>
                        <ul class="all-img-2">
                            @for (int i = 2; i <= 5; i++)
                                    {
                                        string a = "-0"+i+".png";
                                   <li class="img-item-2">
                                        <img src="./assets/img/product/@ViewBag.item.ProductId@a" alt="" onclick="changeImg(@i)" id="@i">
                                    </li>
                            }
                        </ul>
                    </div>
                    <div class="col-6">
                        <div class="info-product">
                            <h3 class="product-name">
                                <a href="" title="">@ViewBag.item.Name</a>
                            </h3>
                            <div class="status-product">
                                Trạng thái: @if (true)
                                {

                                }
                            </div>
                            <div class="infor-oder">
                                Loại sản phẩm: <b>@ViewBag.item.ProductType.Name</b>
                            </div>
                            <div class="price-product">
                                <div class="special-price">
                                    @if (ViewBag.item.Promotion > 0)
                                    {

                                        double GiaMoi = ViewBag.item.Price * (1 - ViewBag.item.Promotion * 0.01);
                                        <p>@string.Format("{0:0,0 đ}", GiaMoi)</p>
                                        <div class="price-old">
                                            Giá gốc:
                                            <del>@string.Format("{0:0,0 đ}", ViewBag.item.Price)</del>
                                            <span class="discount">(-@ViewBag.item.Promotion%)</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="card-text price-color product__price-new">@string.Format("{0:0,0 đ}", ViewBag.item.Price)</p>
                                    }
                                </div>

                            </div>
                            <div class="product-description">

                            </div>

                            <div class="product__color d-flex" style="align-items: center;">
                                <div class="title" style="font-size: 16px; margin-right: 10px;">
                                    Màu:
                                </div>
                                <div class="select-swap d-flex">

                                    <div class="circlecheck">
                                        <input type="radio" id="f-option" class="circle-1" name="selector" checked>
                                        <label for="f-option"></label>
                                        <div class="outer-circle"></div>
                                    </div>
                                    <div class="circlecheck">
                                        <input type="radio" id="g-option" class="circle-2" name="selector">
                                        <label for="g-option"></label>
                                        <div class="outer-circle"></div>
                                    </div>
                                    <div class="circlecheck">
                                        <input type="radio" id="h-option" class="circle-3" name="selector">
                                        <label for="h-option"></label>
                                        <div class="outer-circle"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="product__size d-flex" style="align-items: center;">
                                <div class="title" style="font-size: 16px; margin-right: 10px;">
                                    Kích thước:
                                </div>
                                <div class="select-swap">
                                    <div class="swatch-element" data-value="38">
                                        <input type="radio" class="variant-1" id="swatch-1-38" name="mau" value="trung" onclick="check()">
                                        <label for="swatch-1-38" class="sd"><span>38</span></label>
                                    </div>
                                    <div class="swatch-element" data-value="39">
                                        <input type="radio" class="variant-1" id="swatch-1-39" name="mau" value="thanh" onclick="check()">
                                        <label for="swatch-1-39" class="sd"><span>39</span></label>
                                    </div>
                                    <div class="swatch-element" data-value="40">
                                        <input type="radio" class="variant-1" id="swatch-1-40" name="mau" value="hieu" onclick="check()">
                                        <label for="swatch-1-40" class="sd"><span>40</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="product__wrap">
                                <div class="product__amount">
                                    <label for="">Số lượng: </label>
                                    <input type="button" value="-" class="control" onclick="tru(1)">
                                    <input type="text" value="1" class="text-input" id="text_so_luong-1" onkeypress='validate(event)'>
                                    <input type="button" value="+" class="control" onclick="cong(1)">
                                </div>
                            </div>
                            <div class="product__shopnow">
                                <button class="shopnow2">Mua ngay</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn-default btn-close" data-dismiss="modal">
                <i class="fas fa-times-circle"></i>
            </button>
            <!-- Modal footer -->
            <!-- <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div> -->
        </div>
    </div>
</div>
<!-- end modal -->

@section script
{
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js/Cart.js"></script>
    <script src="~/assets/js/modal.js"></script>
}